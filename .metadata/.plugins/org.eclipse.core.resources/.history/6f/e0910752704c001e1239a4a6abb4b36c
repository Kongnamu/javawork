package data;

public class TypeConversionTest {

	public static void main(String[] args) {
		// 형 변환 : 1)자동 변환
		int iNum = 20;
		float fNum = iNum; // 실수형(4byte)이 정수형(4byte)보다 크므로 자동 변환
		
		System.out.println(iNum); // 20
		System.out.println(fNum); // 20.0
		
		double dNum;              // 실수형 8byte
		dNum = iNum + fNum;       // 40.0 자동 형변환
		System.out.println(dNum); // 40.0
		
		// 2)강제 형 변환
		double dNum1 = 1.2;
		float fNum2 = 0.9F;
		
		int iNum2 = (int)dNum + (int)fNum2 // 1 + 0
		System.out.println(iNum2);

	}

}
