package classes.construct;

//참조 자료형: Person 클래스 정의
public class Person {
	String name;  // 이름
	float height; // 키
	float weight; // 몸무게
	
	//기본 생성자
	public Person( ) {}
	
	//함수 (method)
	public void showPersonInfo() {
		System.out.printf("이름: %s, 키: %f, 몸무게: %f", //문자열
				name, height, weight);                  //쉼표로 연결
	}

}
