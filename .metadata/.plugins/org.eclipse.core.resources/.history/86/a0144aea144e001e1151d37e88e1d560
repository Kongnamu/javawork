package arraycopy;

public class ArrayCopyTest2 {

	public static void main(String[] args) {
		// 배열 복사하기: 문자형 복사
		char[] arr1 = {'N', 'E', 'T'};
		
		// 크기가 arr2인 배열 선언
		char[] arr2 = new char[3];
		
		//1. 복사: 저장
		for(int i = 0; i < arr1.length; i++) {
			arr2[i] = arr1[i];
		}
		for(int i = 0; i < arr1.length; i++) {
			System.out.print(arr2[i] + " ");
		}	
		
		//2. arr2 출력

	}

}
